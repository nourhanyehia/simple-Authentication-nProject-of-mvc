@model List<Department>
@{
    ViewBag.Title = "Departments";
}

<h2>Departments</h2>

<br />
<br />
@if (User.IsInRole("Admin"))
{
    <a href="/Department/Add" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>Add New Department</a>
}

<br />
<br />

@if (Model == null || Model.Count == 0)
{
    <h4>No Departments Found</h4>
}
else
{


    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Department dept in Model)
            {
                <tr id="@dept.id">
                    <td>@dept.Name</td>
                    <td>
                        @Html.Partial("_PartialControl", dept.id)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    @Scripts.Render("~/Scripts/siteScripts/DepartmentDelete.js");
}